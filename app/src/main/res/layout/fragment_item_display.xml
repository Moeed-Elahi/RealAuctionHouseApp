<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/fragment_item_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragments">

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/editTextNumberDecimal2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/buttons"
        android:text="BID!"
        android:textColor="@android:color/holo_red_dark" />

    <ImageView
        android:id="@+id/product_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:clickable="false"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image_details"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Product name"
        android:textColor="@color/colorText"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_details"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Product price"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price_details"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Product description"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:textStyle="normal"/>

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/lastBid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="166dp"
        android:background="@drawable/text_boxes"
        android:ems="10"
        android:hint="Type amount to bid"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="361dp"
        android:layout_height="24dp"
        android:layout_below="@+id/time_remaining"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="What are you waiting for? BID!"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="124dp"
        android:layout_height="31dp"
        android:layout_below="@+id/lastBid"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:text="Choose currency"
        android:textAlignment="center"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Time Remaining"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/buttons"
        android:text="go Back"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/lastBid"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:text="userLastBid"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/remove_product"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/buttons"
        android:text="Remove product?"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:text="Don't get it slip your hands!"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="18sp" />


</RelativeLayout>